<div class='ui main text container segment'>
    <div class='ui huge header'> New Blog Post</div>
    <form action='/blogs' method="POST" class='ui form'>
        <div class='field'>
            <label>Title</label>
        <input type='text' name='blog[header]' placeholder='title'> </div>
        <div class='field'>
            <label>Image</label>
        <input type='text' name='blog[img]' placeholder='image url'></div>
        <div class='field'>
            <label>Content</label>
            <textarea name='blog[bd]' placeholder='start typing...'></textarea></div>
        <input class='ui basic button blue' type='submit'> 
    </form>
</div>
